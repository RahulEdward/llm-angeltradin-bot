# LLM-AngelAgent Configuration
# Copy this file to .env and fill in your values

# Trading Mode (live, paper, backtest)
TRADING_MODE=paper

# Angel One SmartAPI Credentials (optional - can connect via Settings page)
ANGEL_API_KEY=
ANGEL_CLIENT_ID=
ANGEL_PASSWORD=
ANGEL_TOTP_SECRET=

# LLM Provider (openai, anthropic, ollama, groq)
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview

# LLM API Keys (at least one required for AI features)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GROQ_API_KEY=

# Ollama (for local LLM)
OLLAMA_BASE_URL=http://localhost:11434

# Security
SECRET_KEY=change-this-to-a-random-string

# Risk Management
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=10000
MAX_TRADES_PER_DAY=20
DEFAULT_STOP_LOSS_PCT=2.0
DEFAULT_TAKE_PROFIT_PCT=4.0

# Logging
LOG_LEVEL=INFO
