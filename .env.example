# ============================================
# LLM-AngelAgent Configuration
# ============================================

# Platform Mode: live | paper | backtest
TRADING_MODE=paper

# ============================================
# Angel One SmartAPI Credentials
# ============================================
ANGEL_API_KEY=your_api_key_here
ANGEL_CLIENT_ID=your_client_id
ANGEL_PASSWORD=your_password
ANGEL_TOTP_SECRET=your_totp_secret

# ============================================
# LLM Configuration
# ============================================
# Provider: openai | anthropic | ollama | groq
LLM_PROVIDER=openai
LLM_MODEL=gpt-4-turbo-preview

# OpenAI
OPENAI_API_KEY=your_openai_key

# Anthropic (Claude)
ANTHROPIC_API_KEY=your_anthropic_key

# Ollama (Local)
OLLAMA_BASE_URL=http://localhost:11434

# Groq
GROQ_API_KEY=your_groq_key

# ============================================
# Database Configuration
# ============================================
DATABASE_URL=sqlite+aiosqlite:///./data/trading.db
# For PostgreSQL:
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/trading

# ============================================
# Security
# ============================================
SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# ============================================
# Risk Management
# ============================================
MAX_POSITION_SIZE=100000
MAX_DAILY_LOSS=10000
MAX_TRADES_PER_DAY=20
DEFAULT_STOP_LOSS_PCT=2.0
DEFAULT_TAKE_PROFIT_PCT=4.0
KILL_SWITCH_ENABLED=true

# ============================================
# Agent Configuration
# ============================================
AGENT_MARKET_DATA=true
AGENT_STRATEGY=true
AGENT_RISK_MANAGER=true
AGENT_EXECUTION=true
AGENT_MEMORY=true
AGENT_BACKTEST=true
AGENT_SUPERVISOR=true

# ============================================
# Server Configuration
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_TO_FILE=true
LOG_RETENTION_DAYS=30
